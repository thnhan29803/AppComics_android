<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgtimkiem"
    android:orientation="vertical"
    tools:context=".MainTimKiem">

    <EditText
        android:layout_margin="5dp"
        android:id="@+id/timkiem"
        android:textColorHint="#040404"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tìm kiếm truyện"
        android:drawableLeft="@drawable/ic_baseline_search_24"></EditText>

    <ListView
        android:id="@+id/listviewtimkiem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>

</LinearLayout>