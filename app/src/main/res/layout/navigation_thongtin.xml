<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/bgac2"
        android:orientation="vertical">
        
        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/imageview"
            android:layout_marginTop="10dp"
            android:scrollX="10dp"
            android:src="@drawable/user_icon2"
            android:layout_width="90dp"
            android:layout_height="80dp"></ImageView>
        <TextView
            android:textStyle="bold"
            android:textColor="#ff0"
            android:text="Thành Nhân"
            android:layout_marginLeft="10dp"
            android:id="@+id/TEXT_NAME"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:textColor="#F44336"
            android:layout_marginLeft="10dp"
            android:text="nhan99627@gmail.com"
            android:id="@+id/TEXT_Gmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:textColor="@color/white"
            android:text="Online"
            android:id="@+id/TEXT_TrangThai"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>
        
    </LinearLayout>
</LinearLayout>